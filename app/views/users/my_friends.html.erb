<h1>My Friends</h1>

<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 pe-2">
        <%= text_field_tag :stock, params[:stock], placeholder: '@friend_name', autofocus: true, class: 'form-control form-control-lg' %>
      </div>
      <div class="col-sm-3 ps-0">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div id="results" class="col-9">

  </div>
</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>
