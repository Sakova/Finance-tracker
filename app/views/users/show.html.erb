<h2>User Details</h2>

<div class="row">
  <div class="col-8">
    <div class="card mb-3 p-0">
      <div class="card-header row m-0 align-items-center">
        <table>
          <tbody>
            <tr>
              <td><strong>Name: </strong> <%= @user.full_name %></td>
              <td><strong>Email: </strong> <%= @user.email %></td>
              <% if current_user.not_friends_with?(@user.id) %>
                <td><%= link_to 'Follow friend', friendships_path(friend: @user), class: 'btn btn-sm btn-success text-decoration-none', method: :post %></td>
              <% else %>
                <td><span class="badge bg-secondary">You are friends</span></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks</p>
<% end %>
