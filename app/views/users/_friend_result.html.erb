<%= render 'layouts/messages' %>

<% if !@friends.empty? %>
  <div class="card mb-3 p-0">
    <div class="card-header row m-0 align-items-center">
      <table class="col-md-12">
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><strong>Name: </strong> <%= friend.full_name %></td>
              <td><strong>Email: </strong> <%= friend.email %></td>
              <td><strong>Actions: </strong> <%= link_to "View Profile", user_path(friend), class: 'btn btn-sm btn-success' %></td>
              <% if current_user.not_friends_with?(friend.id) %>
                <td><%= link_to 'Follow friend', friendships_path(friend: friend), class: 'btn btn-sm btn-success text-decoration-none', method: :post %></td>
              <% else %>
                <td><span class="badge bg-secondary">You are friends</span></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
