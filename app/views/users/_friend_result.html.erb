<%= render 'layouts/messages' %>

<% if @friends %>
  <div class="card mb-3 p-0">
    <div class="card-header row m-0 align-items-center">
      <table class="col-md-12">
        <tbody>
          <% @friends.each do |friend| %>
        <tr>
              <td><strong>Name: </strong> <%= friend.full_name %></td>
              <td><strong>Email: </strong> <%= friend.email %></td>
              <td><strong>Actions: </strong> <%= link_to "View Profile", '#', class: 'btn btn-sm btn-success' %></td>
              <td><%= link_to 'Follow friend', '#', class: 'btn btn-sm btn-success text-decoration-none', method: :post %></td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
